<div class='nested-fields'>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :company %>
    <%= f.text_field :company, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.text_field :start_date, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.text_field :end_date, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.check_box :is_current %>
    <%= f.label :is_current %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <%= link_to_remove_association "remove experience", f %>
</div>